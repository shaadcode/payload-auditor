{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@payload-config": ["./payload.config.ts"],
      "payload-auditor/*": ["../dist/*"]
    },
    "emitDeclarationOnly": false,
    "noEmit": true
  },

  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.cjs",
    "**/*.ts",
    "**/*.tsx",
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "next.config.ts",
    ".next/types/**/*.ts",
    "./server.mts"
  ],
  "exclude": []
}
